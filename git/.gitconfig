[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	side-by-side = true
	line-numbers = false
	syntax-theme = tokyonight_night
	dark = true
	navigate = true

[merge]
	conflictStyle = zdiff3

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit

[pull]
	rebase = true

[include]
	path = ~/.gitconfig.local

